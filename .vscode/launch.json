    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug (NuttX Nucleo-f4)",
            "device": "stm32f4",
            "armToolchainPath": "/opt/gcc-arm-none-eabi-9-2019-q4-major/bin/",
            "cwd": "${workspaceRoot}",
            "executable": "nuttx",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "board/st_nucleo_f4.cfg"
            ],
            "preRestartCommands": [
                "target remote localhost:3333",
                "file nuttx",
                "load",
                "add-symbol-file nuttx 0x08000000",
                "enable breakpoint",
                "b os_start",
                "monitor reset"
            ],
            "showDevDebugOutput": true
        }
    ]
}